{
  "extends": "tsconfig/ui.json",
  "compilerOptions": {
    "strict": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "esModuleInterop": true,
    "strictNullChecks": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "baseUrl": "./src",
    "paths": {
      "@/*": ["*"],
      "@ui-kit/*": ["../../../packages/curve-ui-kit/src/*"]
    }
  },
  "exclude": ["node_modules"],
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "vite.config.mts",
    "**/*.d.ts",
    "src/shared/api/figma-tokens/validation/validate-figma-tokens.js"
  ]
}
